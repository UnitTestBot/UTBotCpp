<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <id>com.github.vol0n.utbotcppclion</id>
    <name>UTBotCppClion</name>
    <vendor>vol0n</vendor>

    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.modules.clion.ide</depends>
    <depends>com.intellij.modules.lang</depends>
    <depends>com.intellij.modules.cidr.lang</depends>
    <depends>com.intellij.modules.clion</depends>


    <extensions defaultExtensionNs="com.intellij">
        <codeInsight.lineMarkerProvider language="ObjectiveC"
                                        implementationClass="com.huawei.utbot.cpp.ui.UTBotTestRunLineMarkerProvider"/>
        <projectService serviceImplementation="com.huawei.utbot.cpp.services.GeneratorSettings"/>
        <projectService serviceImplementation="com.huawei.utbot.cpp.services.UTBotSettings"/>
        <applicationService serviceImplementation="com.huawei.utbot.cpp.services.UTBotPluginSpecificSettings"/>
        <coverageEngine implementation="com.huawei.utbot.cpp.coverage.UTBotCoverageEngine"/>
        <postStartupActivity implementation="com.huawei.utbot.cpp.services.UTBotStartupActivity"/>
        <projectConfigurable parentId="tools" instance="com.huawei.utbot.cpp.ui.UTBotConfigurable"
                             id="com.huawei.utbot.cpp.ui.UTBotConfigurable"
                             displayName="UTBot Settings"
                             nonDefaultProject="true"/>
        <notificationGroup id="Custom Notification Group" displayType="BALLOON"/>

        <coverageEngine implementation="com.huawei.utbot.cpp.coverage.UTBotCoverageEngine"/>
        <coverageRunner implementation="com.huawei.utbot.cpp.coverage.UTBotCoverageRunner"/>

        <statusBarWidgetFactory implementation="com.huawei.utbot.cpp.ui.statusBar.VerboseModeWidgetFactory"/>
        <statusBarWidgetFactory implementation="com.huawei.utbot.cpp.ui.statusBar.ConnectionStatusBarWidgetFactory"/>
        <toolWindow id="UTBot targets"
                    secondary="false"
                    anchor="bottom"
                    factoryClass="com.huawei.utbot.cpp.ui.targetsToolWindow.UTBotTargetsToolWindowFactory"/>
        <toolWindow factoryClass="com.huawei.utbot.cpp.ui.userLog.ConsoleToolWindowProvider"
                    id="UTBot consoles"
                    anchor="bottom"
                    secondary="true"
        />
        <projectViewNodeDecorator implementation="com.huawei.utbot.cpp.ui.sourceFoldersView.FolderDecorator"/>
    </extensions>


    <actions>

        <group id="actions.UTBot.editor" text="UTBot Generate Tests..." popup="true">
            <add-to-group group-id="EditorPopupMenu" anchor="last"/>
        </group>

        <group id="actions.UTBot.projectTree" text="UTBot Generate Tests..." popup="false">
            <add-to-group group-id="ProjectViewPopupMenuModifyGroup" anchor="first"/>
        </group>

        <action id="com.huawei.utbot.cpp.actions.UnmarkSourceFolderAction"
                class="com.huawei.utbot.cpp.actions.UnmarkSourceFolderAction" text="Unmark UTBot Folders"
                description="Unmarks selected folders as UTBot folders">
        </action>

        <action id="com.huawei.utbot.cpp.actions.MarkSourceFolderAction"
                class="com.huawei.utbot.cpp.actions.MarkSourceFolderAction" text="Mark As UTBot Folders"
                description="Marks selected folders as UTBot folders">
        </action>

        <action id="com.huawei.utbot.cpp.actions.AskServerToGenerateBuildDir"
                class="com.huawei.utbot.cpp.actions.AskServerToGenerateBuildDir"
                text="Generate Build Directory" description="Ask server to generate build dir"/>
        <action id="com.huawei.utbot.cpp.actions.ConfigureProjectAction"
                class="com.huawei.utbot.cpp.actions.ConfigureProjectAction" text="Configure Project"
                description="Configure project so that server can generate tests"/>
        <action id="com.huawei.utbot.cpp.actions.AskServerToGenerateJsonForProjectConfiguration"
                class="com.huawei.utbot.cpp.actions.AskServerToGenerateJsonForProjectConfiguration"
                text="Generate Missing Json Files"
                description="Ask server to generate missing json files"/>
        <action id="com.huawei.utbot.cpp.actions.ShowWizardAction"
                class="com.huawei.utbot.cpp.actions.ShowWizardAction" text="Quickstart Wizard"
                description="Show quickstart wizard"/>
        <action id="com.huawei.utbot.cpp.actions.ReconfigureProjectAction"
            class="com.huawei.utbot.cpp.actions.ReconfigureProjectAction" text="Reset Cache and Configure Project"
                description="UTBot: Reset cache and configure project"/>


        <action id="com.huawei.utbot.cpp.actions.GenerateForFileAction"
                class="com.huawei.utbot.cpp.actions.GenerateForFileAction"
                text="UTBot: Generate Tests For Current File"
        >
            <override-text place="EditorPopup" text="for Current File"/>
            <synonym text="UF"/>
            <add-to-group
                    group-id="actions.UTBot.editor"
                    anchor="first"/>
            <add-to-group
                    group-id="actions.UTBot.projectTree"
                    anchor="first"/>
        </action>

        <action id="com.huawei.utbot.cpp.actions.GenerateForLineAction"
                class="com.huawei.utbot.cpp.actions.GenerateForLineAction"
                text="UTBot: Generate Tests For Current Line">
            <override-text place="EditorPopup" text="for Current Line"/>
            <synonym text="UL"/>
            <add-to-group
                    group-id="actions.UTBot.editor"
                    anchor="after"
                    relative-to-action="com.huawei.utbot.cpp.actions.GenerateForFileAction"/>
        </action>

        <action id="com.huawei.utbot.cpp.actions.GenerateForFunctionAction"
                class="com.huawei.utbot.cpp.actions.GenerateForFunctionAction"
                text="UTBot: Generate Tests For Current Function">
            <override-text place="EditorPopup" text="for Current Function"/>
            <synonym text="UF"/>
            <add-to-group
                    group-id="actions.UTBot.editor"
                    anchor="after"
                    relative-to-action="com.huawei.utbot.cpp.actions.GenerateForLineAction"/>
        </action>

        <action id="com.huawei.utbot.cpp.actions.GenerateForClassAction"
                class="com.huawei.utbot.cpp.actions.GenerateForClassAction"
                text="UTBot: Generate Tests For Current Class">
            <override-text place="EditorPopup" text="for Current Class"/>
            <synonym text="UC"/>
            <add-to-group
                    group-id="actions.UTBot.editor"
                    anchor="after"
                    relative-to-action="com.huawei.utbot.cpp.actions.GenerateForFunctionAction"/>
        </action>

        <action id="com.huawei.utbot.cpp.actions.GenerateForPredicateAction"
                class="com.huawei.utbot.cpp.actions.GenerateForPredicateAction"
                text="UTBot: Generate Tests With Prompted Result">
            <override-text place="EditorPopup" text="with Prompted Result"/>
            <synonym text="UR"/>
            <add-to-group
                    group-id="actions.UTBot.editor"
                    anchor="after"
                    relative-to-action="com.huawei.utbot.cpp.actions.GenerateForClassAction"/>
        </action>

        <action id="com.huawei.utbot.cpp.actions.GenerateForAssertionAction"
                class="com.huawei.utbot.cpp.actions.GenerateForAssertionAction"
                text="UTBot: Generate Tests That Fail Current Assertion">
            <override-text place="EditorPopup" text="That Fail Current Assertion"/>
            <synonym text="UA"/>
            <add-to-group
                    group-id="actions.UTBot.editor"
                    anchor="after"
                    relative-to-action="com.huawei.utbot.cpp.actions.GenerateForClassAction"/>
        </action>

        <action id="com.huawei.utbot.cpp.actions.GenerateForProjectAction"
                class="com.huawei.utbot.cpp.actions.GenerateForProjectAction"
                text="UTBot: Generate Tests For Project" description="Generate tests for whole project">
            <override-text place="EditorPopup" text="For Project"/>
            <synonym text="Projgen"/>
            <add-to-group
                    group-id="actions.UTBot.projectTree"
                    anchor="last"/>
        </action>

        <action id="com.huawei.utbot.cpp.actions.GenerateForFolderAction"
                class="com.huawei.utbot.cpp.actions.GenerateForFolderAction"
                text="UTBot: Generate Tests For Folder">
            <synonym text="UF"/>
            <add-to-group
                    group-id="actions.UTBot.projectTree"
                    anchor="last"/>
        </action>

        <action id="com.huawei.utbot.cpp.actions.GenerateForSnippetAction"
                class="com.huawei.utbot.cpp.actions.GenerateForSnippetAction"
                text="UTBot: Generate Tests For Code Snippet"
                description="Generates tests for file without context of a project">
            <synonym text="US"/>
        </action>
    </actions>
</idea-plugin>
